<div class="row">
  <div class="col-sm-12">
    <h4>Edit</h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <form class="" action="<%= users_update_path @user.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <!-- name -->
      <div class="form-group">
        <input type="text" name="user[name]"class="form-control" id="name" value="<%= @user.name.capitalize %>">
      </div>
      <!-- alias -->
      <div class="form-group">
        <input type="text" name="user[alias]"class="form-control" id="alias" value= "<%= @user.alias.capitalize %>">
      </div>
      <!-- email -->
      <div class="form-group">
        <input type="email" name="user[email]"class="form-control" id="email" value="<%= @user.email %>">
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>

      </div>

    </form>
  </div>
  <div class="col-sm-2"></div>

</div>
